<h1 class="page-title">お気に入り一覧</h1>

<p class="page-navi">
  <small><%= page_entries_info @favorite_pictures %></small>
</p>
<%= paginate @favorite_pictures %>
<% @favorite_pictures.each do |picture| %>
  <div class="posts-wrapper col-md-6 col-center"> 
    <ul class="col-md-6 col-center">
      <li><%= image_tag picture.image.url(:thumb) if picture.image.url %></li>
      <li>
        <%= picture.content %>
      </li>
        <%= link_to "お気に入り解除", favorite_path(id: picture.id), 
                                                        method: :delete, class: "btn-s btn-danger" %>
      <li class="posted-by">
        <small id="owner">
          <%= link_to user_path(picture.user.id) do %>
            posted by <%= picture.user.name %> / 
          <% end %>    
        </small>
        <small>
          <%= link_to '詳細', picture_path(picture.id) %>
        </small>
      </li>
    </ul> 
  </div>
<% end %>