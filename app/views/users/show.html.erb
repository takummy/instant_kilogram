<div class="content-container col-center">
  <div class="user-info col-md-6 col-center">
    <h1 class="page-title"><%= @user.name %></h1>
    <div class="email">
      <div>
        <% if @user.icon.url %>
          <%= image_tag @user.icon.url(:thumb) %>
        <% else %>
          <%= image_tag 'default_user_icon.png' %>
        <% end %>
      </div>
      <div>
        <%= @user.email %>
      </div>
      <% if current_user?(@user) %>
        <div>
          <%= link_to '編集', edit_user_registration_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>